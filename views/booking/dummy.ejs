<% layout("layouts/boilerplate") %>

    <style>
        .card {
            width: 22rem;
            margin: 1rem;
            background-color: transparent !important;
            border: none !important;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-10px);
        }

        .card img {
            height: 250px;
            object-fit: cover;
            transition: opacity 0.3s ease;
        }

        .card:hover img {
            opacity: 0.8;
        }

        .card-body {
            text-align: center;
        }

        .form-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .form-column {
            flex: 1 1 45%;
            margin: 1rem;
        }

        @media (max-width: 768px) {
            .form-column {
                flex: 1 1 100%;
                margin: 0.5rem 0;
            }
        }
    </style>

    <div class="row texts mt-3" style="justify-content: center;">
        <div class="col-10 texts mt-4">
            <div class="col-12 texts">
                <div class=" mb-3">
                    <h3 class="texts text-center"><%=category%></h3>
                </div>
                <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" style="justify-content: center;">
                    <%for(plan of plans) { %>
                        <div class="col listing-card bg">
                            <div class="card">
                                <a href="/plan/<%=plan._id%>" style="text-decoration: none;">
                                    <h5 class="card-text texts text-center">
                                        <b>
                                            <%=plan.city%>
                                        </b>
                                    </h5>
                                    <img src="<%=plan.image.url%>" class="card-img-top img-hover bg"
                                        alt="listing_image">
                                    <div class="card-body" style="display: flex; flex-direction: row;">
                                        <p class="card-text texts " style="margin-left: auto;">
                                            <b>
                                                <%=plan.participants.length%> <i>users participated</i>
                                            </b> <i class="fa-solid fa-user-group"></i>
                                        </p>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <%}%>
                </div>
            </div>
        </div>