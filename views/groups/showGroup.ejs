<style>
    /* General Styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
}

.row {
    margin: 0;
    padding: 0;
}

/* Left Section (Participants) */
.participants-list {
    background-color: #fff;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.section-heading {
    font-size: 1.5rem;
    margin-bottom: 20px;
}

.list-group-item {
    display: flex;
    align-items: center;
    padding: 10px;
    border: none;
    background-color: #f9f9f9;
}

.participant-img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
}

.participant-name {
    text-decoration: none;
    font-weight: bold;
    color: #333;
}

.participant-name:hover {
    color: #007bff;
}

/* Right Section (Group Details & Chat) */
.group-details {
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.group-title {
    font-size: 2rem;
    margin-bottom: 15px;
}

.group-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 15px;
}

.group-description {
    font-size: 1rem;
    color: #555;
}

/* Chat Section (Reviews) */
.chat-section {
    margin-top: 30px;
}

.submit-review-btn {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
}

.submit-review-btn:hover {
    background-color: #0056b3;
}

.reviews-list {
    margin-top: 20px;
}

.review-card {
    border: none;
    background-color: #f9f9f9;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
}

.review-card .card-body {
    padding: 15px;
}

.review-card .card-title {
    font-weight: bold;
    margin-bottom: 10px;
}

.review-card .card-text {
    color: #555;
}

</style>
<div class="row mt-4">
    <!-- Left Section (Participants) -->
    <div class="col-md-4 col-lg-3">
        <div class="participants-list">
            <h4 class="section-heading">Participants</h4>
            <ul class="list-group">
                <% group.participants.forEach(user => { %>
                    <li class="list-group-item participant-item">
                        <img src="<%= user.image.url %>" alt="<%= user.username %>" class="participant-img">
                        <a href="/u/<%= user.username %>" class="participant-name"><%= user.username %></a>
                    </li>
                <% }); %>
            </ul>
        </div>
    </div>

    <!-- Right Section (Group Details & Chat) -->
    <div class="col-md-8 col-lg-9">
        <!-- Upper Section (Group Details) -->
        <div class="group-details">
            <h3 class="text-center group-title"><%= group.name %></h3>
            <img src="<%= group.image.url %>" alt="<%= group.name %> Image" class="group-image">
            <p class="group-description"><%= group.description %></p>
            <hr>
        </div>

        <!-- Lower Section (Chat/Reviews) -->
        <div class="chat-section">
            <h4 class="section-heading">Chat & Reviews</h4>
            <form action="/group/<%= group._id %>/reviews" method="POST">
                <div class="form-group">
                    <textarea name="review[comment]" class="form-control" placeholder="Write a review..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary submit-review-btn">Submit</button>
            </form>
            <div class="reviews-list">
                <% group.reviews.forEach(review => { %>
                    <div class="card review-card mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><%= review.author.username %></h5>
                            <p class="card-text"><%= review.comment %></p>
                            <p class="card-text"><i><%= review.createdAt.toString().split(" ").slice(1, 4).join(" -") %></i></p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>
